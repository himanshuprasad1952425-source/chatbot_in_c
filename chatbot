#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <time.h>
int main()
 {

    int ch, a, b, choice, rchoice;
    char str[100], c[100], j[10];

    // Seed random generator
    srand(time(0));

    // Start program
    do {
        printf("Hi! I'm ace chatbot. Type 'help' to see what I can do.\n");
        scanf("%s", str);

        if (strcmp(str, "help") != 0) {
            printf("Invalid input. Please type 'help' to proceed.\n");
        }

    } while (strcmp(str, "help") != 0);

    // Main menu loop
    do {
        printf("\nMenu\n1. Chat with me\n2. Mathematical Calculations\n3. Tell me a joke\n4. Random Command\n5. Exit\nEnter your choice: ");
        scanf("%d", &ch);

        switch (ch) {

// -----------------------------------------------------
// 1. CHAT Module
// -----------------------------------------------------
        case 1:
            while (1) {
                printf("\nType 'hai', 'hello', 'good', 'who',or 'thanks (or type 'exit' to stop chatting): ");
                scanf(" %[^\n]%*c", c);

                if (strcmp(c, "hai") == 0 || strcmp(c, "hello") == 0) {
                    printf("\nHello, Having a good day? lets start chattingðŸ˜‰\n");
                }
                else if (strcmp(c, "good") == 0 || strcmp(c, "fine") == 0) {
                    printf("\nThat's great to hearðŸ¥°! What else would you like to chat about?\n");
                }
                else if (strcmp(c, "who") == 0) {
                    printf("\nI'm just a simple chatbot trying to make your day better by helping u in various ways.ðŸ˜ðŸ˜Ž\n");
                }
                else if (strcmp(c, "thanks") == 0) {
                    printf("\nYou're welcome! I'm always here to help you.ðŸ˜‡\n");
                }
                else if (strcmp(c,"who is the owner of ace collage")==0){
                    printf("\nMr Gopala Krishna Murthy\n");
                }
                else if (strcmp(c,"What is the highest package in Ace Engineering College?")==0){
                    printf ("\nThe highest package at ACE Engineering College is INR 46.38 LPA, offered by Amazon to a student in the 2025 \n");
                }
                else if (strcmp(c, "ratings of ace collage")==0){
                    printf ("\nACE Engineering College is rated 4.3 out of 5 by 242 genuine verified students\n");
                }
               else if (strcmp(c, "what is ace collage igood for?") == 0) {
                    printf ("\n>Students seeking cost-effective engineering education near Hyderabad with a realistic pathway to IT/service-sector jobs,                                    \n>Those who are self-motivated to pursue internships, certifications, and projects to boost employability.\n");
                }
                else if (strcmp(c,"where is ace collage  located")==0){
                    printf("\nAddress: Ankushapur, Ghatkesar Mandal, Medchal District, Telangana. 501 301.\n");
                }
                else if (strcmp(c, "exit") == 0) {
                    printf("\nGoodbye!ðŸ¤— Returning to main menu.\n");
                    break;
                }
                else {
                    printf("I didn't understand that. Try saying 'hai', 'hello', 'good', 'who',or 'thanks'.");
                }
            }
            break;

// -----------------------------------------------------
// 2. MATH CALCULATOR
// -----------------------------------------------------
        case 2:
            do {
                printf("Mathematical Calculations:\n1.Addition\n2.Subtraction\n3.Multiplication\n4.Division\n5.Exit\n");
                printf("Enter your choice: ");
                scanf("%d", &choice);

                if (choice >= 1 && choice <= 4) {
                    printf("Enter two numbers: ");
                    scanf("%d %d", &a, &b);
                }

                switch (choice) {
                case 1:
                    printf("Result: %d\n", a + b);
                    break;

                case 2:
                    printf("Result: %d\n", a - b);
                    break;

                case 3:
                    printf("Result: %d\n", a * b);
                    break;

                case 4:
                    if (b != 0)
                        printf("Result: %.2f\n", (float)a / b);
                    else
                        printf("Error! Division by zero.\n");
                    break;

                case 5:
                    printf("Returning to main menu.\n");
                    break;

                default:
                    printf("Invalid choice! Try again.\n");
                }

            } while (choice != 5);
            break;
           
// -----------------------------------------------------
// 3. JOKE
// -----------------------------------------------------
        case 3:
            printf("\n!!Here are some Jokes!!\n ");
            printf("\n1: Why was six afraid of seven? Because seven eight nine.!\n");
            printf("\n2: Why are math teacher's sad? They always have problems to solve!\n");
            printf("\n3: Why did the scarecrow win an award? Because he was outstanding in his field!\n");
            printf("\n4: Why was the math book sad? It had too many problems.!\n");
            printf("\n5: My walet is like an onion .opening it makes me cry!\n");
            printf("\n6: Why did the student eat his homework? Because the teacher told him it was a piece of cake.!\n");
            printf("Type somethind to return to the menu: ");
            scanf(" %[^\n]%*c", j);
            break;

// -----------------------------------------------------
// 4. RANDOM COMMAND 
// -----------------------------------------------------
        case 4:
            printf("\nRandom Menu:\n1. Random Number\n2. Random Dark Joke\n3. Random Greeting\nEnter your choice: ");
            scanf("%d", &rchoice);

            switch (rchoice) {
            case 1:
                printf("Random number: %d\n", rand() % 100);
                break;

            case 2: {
                const char *darkjokes[] = {
      "\nWhat is the difference between an orphan and an apple? The apple gets picked!\n",
    "\nDo you know why Americans are good at solving Rubik's cubes? Because they have a history of separating colors.\n",
    "\nMy wallet is like an onion. Opening it makes me cry!\n",
    "I told my therapist I have suicidal tendencies. She said, 'Now you have something to live for â€” your next appointment.'\n",
    "\nMy doctor told me I should start running. Not for my healthâ€¦ but because he saw my test results.\n",
    "\nThey say laughter is the best medicine. Too bad it doesn't cure my life choices.\n",
    "\nI asked life for a signâ€¦ it gave me a speeding ticket.\n"
};
printf("%s\n", darkjokes[rand() % 7]);

            }
            break;

            case 3: {
                const char *greet[] = {
                    "Hey there!",
                    "Good to see you!",
                    "Hope you're having a great day!",
                    "Hello its me OBANAI!",
                };
                printf("%s\n", greet[rand() % 4]);
            }
            break;

            default:
                printf("Invalid random option.\n");
            }
            break;

// -----------------------------------------------------
// 5. EXIT  
// -----------------------------------------------------
        case 5:
            printf("Exiting program. SEE YOU NEXT TIME!\n");
            printf("!!HAVE A NICE DAY!!\n");
            break;

// -----------------------------------------------------
        default:
            printf("Invalid choice. Please try again.\n");
        }

    } while (ch != 5);

    return 0;
}